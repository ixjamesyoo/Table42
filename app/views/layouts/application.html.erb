<!DOCTYPE html>
<html>
  <head>
    <title>Table42</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>

    <% if logged_in? %>
      <script type="text/javascript">
          window.currentUser =
            <%= render("api/users/user.json.jbuilder", user: current_user).html_safe %>
      </script>
    <% end %>

    <script type="text/javascript">
      window.images = {
        table42Logo: "<%= image_path("logo.png") %>",
      }
    </script>

    <%= yield %>
  </body>
</html>
